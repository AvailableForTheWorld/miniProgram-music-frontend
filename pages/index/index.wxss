
.banner{
    width: 100%;
    height: 300rpx;
}

.banner image{
    width: 100%;
    height: 100%;
}

.nav{
    display: flex;
    justify-content: center;
}
.nav_item{
    display: flex;
    width: 20%;
    flex-direction: column;
    align-items: center;
}
.nav_item view{
    font-size: 26rpx;
}
.iconfont{
    width: 100rpx;
    height: 100rpx;
    text-align: center;
    line-height: 100rpx;
    background-color:#71c9ce;
    border-radius: 50%;
    font-size: 50rpx;
    color: white;
    margin: 30rpx 0 20rpx 0;
}

.recommend{
    font-size: 26rpx;
    padding: 20rpx;
}
.recommend .header .title{
    font-size: 32rpx;
    line-height: 80rpx;
    color: #666;
}
.recommend .header .more{
    float:right;
    border: 1rpx solid #333;
    padding: 10rpx;
    font-size: 20rpx;
    border-radius: 20rpx;
}

.scroll_view{
    display: flex;
    margin-top: 30rpx;
}
.scroll_item{
    width: 200rpx;
    margin-right: 20rpx;
    
}
.scroll_item image{
    width: 200rpx;
    height: 200rpx;
    border-radius: 20rpx;
}
.scroll_item text{
    display:-webkit-box;
    overflow: hidden;
    text-overflow: ellipsis;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
}