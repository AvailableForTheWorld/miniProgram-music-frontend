.container{
    width: 100%;
}
.container .user-section{
    height: 450rpx;
}
.container .user-section>image:first-child{
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    z-index: -999;
} 

.container .user-section .avatar{
    position: absolute;
    top: 100rpx;
    left: 50rpx;
}
.container .user-section .avatar image{
    width: 100rpx;
    height: 100rpx;
    vertical-align: middle;
    margin-right: 20rpx;
    border-radius: 20rpx;
}
.container .user-section .avatar text{
    display: inline-block;
    line-height: 100rpx;
    height: 100rpx;
    text-align: center;
    width: 500rpx;
    vertical-align: middle;
}
.container .user-section .vip-card{
    position: absolute;
    overflow: hidden;
    width: 80%;
    height: 300rpx;
    top: 240rpx;
    left: 50%;
    transform: translateX(-50%);
    border-radius: 30rpx;
    background-color: rgba(0,0,0,0.8);
    color: gold;
    z-index: -990;
}

.container .user-section .vip-card>image:first-child{
    position: absolute;
    top: 50rpx;
    right: 0;
    width: 380rpx;
    height: 250rpx;
}
.container .user-section .vip-card .vip-button{
    position: absolute;
    top: 30rpx;
    right: 30rpx;
    padding: 10rpx;
    font-size: 20rpx;
    border-radius: 25rpx;
    color: black;
    background-color: gold;
}
.container .user-section .vip-card .icon{
    /* height: 80rpx; */
    margin: 30rpx;
}
.container .user-section .vip-card .icon .icon-huiyuan-{
    color: gold;
    padding: 10rpx;
    font-size: 24rpx;
}
.container .user-section .vip-card .icon .icon-huiyuan-::before{
    margin:0 20rpx;
}

.container .user-section .vip-card .content{
    display: flex;
    flex-direction: column;   
}
.container .user-section .vip-card .content text{
    margin: 30rpx 0 0 30rpx;
}
.container .cover-container{
    margin-top: -100rpx;
}
.container .cover-container .arc{
    width: 100%;
    height: 40rpx;
}
.container .cover-container .cover-content{
    width: 100%;
    
    background-color: #f5f5f5;
    margin-top: -10rpx;
    overflow: hidden;
}
.container .cover-container .cover-content .nav{
    margin: 30rpx;
    padding: 30rpx;
    border-radius: 20rpx;
    display: flex;
    justify-content: space-around;
    background-color: #fff;
}
.container .cover-container .cover-content .nav .nav-item{
    display: flex;
    flex-direction: column;
    text-align: center;
}
.container .cover-container .cover-content .nav .nav-item .iconfont{
    color: #71c9ce;
    font-size: 60rpx;
}
.container .cover-container .cover-content .nav .nav-item .text{
    font-size: 24rpx;
    margin-top: 10rpx;
}

.cover-container .cover-content .personal-content{
    margin: 30rpx;
    background-color: #fff;
    border-radius: 20rpx;
    display: flex;
    flex-direction: column;
}
.cover-container .cover-content .personal-content .personal-content-item{
    width: 100%;
    
    line-height: 100rpx;
    text-align: center;
}
.cover-container .cover-content .personal-content .playList view scroll-view {
    display: flex;
    flex-direction: row;
    height: 200rpx;
}
.cover-container .cover-content .personal-content .playList view scroll-view .playList-item image{
    width: 200rpx;
    height: 200rpx;
    margin: 0 10rpx 0 10rpx;
    border-radius: 20rpx;
}